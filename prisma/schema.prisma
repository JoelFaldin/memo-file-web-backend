// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  rut String @unique
  nombre String

  Memo Memo[]
  Direction Direction[]
}

model Direction {
  user User @relation(fields: [rut], references: [rut])
  rut String @unique

  calle String
  numero String?
  aclaratoria String?
}

model Memo {
  id String @unique @id

  user User @relation(fields: [rut], references: [rut])
  rut String

  tipo String
  patente String
  periodo String
  capital Decimal
  afecto Float
  total Decimal
  emision Int
  fecha_pago DateTime
  giro String
  agtp String?
}